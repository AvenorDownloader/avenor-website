      document.addEventListener("DOMContentLoaded", () => {
        const toggles = document.querySelectorAll(".pricing__toggle-btn");
        const cards = document.querySelectorAll(".pricing__card[data-tier-group]");
        const pricingContainer = document.querySelector(".pricing");
        const compare = document.querySelector(".pricing-compare");
        const compareRows = compare ? compare.querySelectorAll(".pc-row") : [];
        function updateVisibility(target) {
          if (pricingContainer) {
            pricingContainer.setAttribute("data-tier-view", target);
          }
          if (compare) {
            compare.setAttribute("data-tier-view", target);
            compare.style.setProperty("--pc-cols", target === "studio" ? "3" : "4");
            compareRows.forEach((row) => {
              const cells = Array.from(row.children);
              cells.forEach((cell, index) => {
                if (index === 0) {
                  cell.style.display = "";
                  return;
                }
                if (target === "studio") {
                  cell.style.display = index >= 5 ? "" : "none";
                } else {
                  cell.style.display = index <= 4 ? "" : "none";
                }
              });
            });
          }
          cards.forEach((card) => {
            const group = card.getAttribute("data-tier-group");
            if (group === target) {
              card.style.display = "";
            } else {
              card.style.display = "none";
            }
          });
        }
        const activeToggle = document.querySelector(".pricing__toggle-btn.active");
        if (activeToggle) {
          updateVisibility(activeToggle.getAttribute("data-target"));
        }
        toggles.forEach((btn) => {
          btn.addEventListener("click", () => {
            toggles.forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            const target = btn.getAttribute("data-target");
            updateVisibility(target);
          });
        });
      });
