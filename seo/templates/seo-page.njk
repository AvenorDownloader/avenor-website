<!DOCTYPE html>
<html lang="{{ lang }}">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{{ meta.title }}</title>
    <meta name="description" content="{{ meta.description }}" />

    {# OpenGraph meta tags #}
    <meta property="og:title" content="{{ meta.title }}" />
    <meta property="og:description" content="{{ meta.description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ canonical }}" />
    <meta property="og:site_name" content="{{ global.siteName }}" />
    {% if meta.ogImage %}
    <meta property="og:image" content="{{ global.baseUrl }}{{ global.assetsPrefix }}{{ meta.ogImage }}" />
    {% endif %}

    {# JSON-LD structured data #}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Avenor Downloader",
      "description": "Desktop application for downloading YouTube videos in original quality",
      "url": "{{ global.baseUrl }}",
      "applicationCategory": "MultimediaApplication",
      "operatingSystem": ["Windows 10", "Windows 11", "macOS 10.14+", "macOS 11+", "macOS 12+"],
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "featureList": [
        "Download YouTube videos in original quality",
        "Clip videos before download with In/Out points",
        "Support for 4K, 1080p, 720p and other qualities",
        "Local processing - no uploads to external servers",
        "Available for Windows and macOS"
      ]
    }
    </script>

    {% if meta.faq %}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {% for item in meta.faq %}
        {
          "@type": "Question",
          "name": "{{ item.question }}",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "{{ item.answer }}"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
    </script>
    {% endif %}

    {# Общие стили/иконки как на главной #}
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="apple-touch-icon" href="/favicon.png">

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="/style.css" />

    {# canonical + hreflang (важно для SEO) #}
    <link rel="canonical" href="{{ canonical }}" />
    {% for a in alternates %}
      <link rel="alternate" hreflang="{{ a.hreflang }}" href="{{ a.href }}" />
    {% endfor %}
  </head>

  <body>
    <div class="page">
      {# Минимальный SEO-хедер (можно потом заменить на твой полноценный) #}
      <header class="header">
        <div class="container header__inner">
          <div class="logo">
            <a href="/"><img src="/assets/Logo.png" alt="Avenor Downloader" class="logo__img" /></a>
          </div>
        </div>
      </header>

      <main class="page seo-page">
        <section class="hero">
          <div class="container hero__inner">
            <div class="hero__content">
              <h1 class="hero__title">
                {{ meta.h1 }}
              </h1>
              <p class="hero__subtitle">
                {{ meta.lead }}
              </p>

              <div class="hero__actions hero__actions--os">
                <a href="/download/win" class="btn btn--primary" target="_blank" rel="noopener noreferrer">
                  <img class="os-icon-img" src="/assets/icons/windows.svg" alt="" aria-hidden="true">
                  <span>Download for Windows</span>
                </a>
                <a href="/download/mac" class="btn btn--primary" target="_blank" rel="noopener noreferrer">
                  <img class="os-icon-img" src="/assets/icons/apple.svg" alt="" aria-hidden="true">
                  <span>Download for macOS</span>
                </a>
              </div>
            </div>
          </div>
        </section>

        {# Additional sections if they exist #}
        {% if meta.sections %}
          {% for section in meta.sections %}
            <section class="section section--alt">
              <div class="container">
                <div class="section__head">
                  <h2 class="section__title">{{ section.title }}</h2>
                </div>
                
                {% if section.type == "what_is" or section.type == "clip_feature" or section.type == "quality_formats" or section.type == "privacy_safety" or section.type == "platforms" %}
                  <div class="section__content">
                    <p>{{ section.content }}</p>
                  </div>
                {% elif section.type == "benefits" and section.items %}
                  <div class="section__content">
                    <div class="hero__badges">
                      {% for item in section.items %}
                        <div class="hero__badge">
                          <strong>{{ item.title }}:</strong> {{ item.description }}
                        </div>
                      {% endfor %}
                    </div>
                  </div>
                {% elif section.type == "how_it_works" and section.steps %}
                  <div class="section__content">
                    <ol class="steps-list">
                      {% for step in section.steps %}
                        <li class="step-item">
                          <h3 class="step-item__title">{{ step.title }}</h3>
                          <p class="step-item__description">{{ step.description }}</p>
                        </li>
                      {% endfor %}
                    </ol>
                  </div>
                {% endif %}
              </div>
            </section>
          {% endfor %}
        {% endif %}

        {# FAQ section if it exists #}
        {% if meta.faq %}
          <section class="section section--faq">
            <div class="container">
              <div class="section__head">
                <h2 class="section__title">FAQ</h2>
              </div>
              <div class="section__content">
                {% for item in meta.faq %}
                  <details class="hero__badge">
                    <summary><strong>{{ item.question }}</strong></summary>
                    <div style="margin-top: 1rem;">
                      <p>{{ item.answer }}</p>
                    </div>
                  </details>
                {% endfor %}
              </div>
            </div>
          </section>
        {% endif %}
      </main>

      <footer class="footer">
        <div class="container footer__inner">
          <div class="footer__brand">
            <span>© Avenor</span>
          </div>
          <div class="footer__links">
            <a href="/privacy.html" class="footer__link">Privacy</a>
            <a href="/terms.html" class="footer__link">Terms</a>
            <a href="/refund.html" class="footer__link">Refund</a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>